<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/defaultAppColour"
    tools:context="uk.ac.edgehill.keidel.alexander.mymedicare.Activities.WelcomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/welcomeScreenLinearLayout"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to MyMedicare"
        android:id="@+id/welcomeScreenTitle"
        android:textSize="30sp"
        android:gravity="center_horizontal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeScreenSubTitle"
        android:text="Your personalised health monitoring App"
        android:textSize="20sp"
        android:gravity="center_horizontal"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/welcomeScreenRelativeLayout"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/welcomeScreenImageView"
                android:src="@mipmap/medical_symbol"
                android:layout_alignParentTop="true"
                android:maxHeight="250dp"
                android:maxWidth="250dp"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"
                android:padding="10dp"
                android:layout_margin="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/welcomeScreenContinueButton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Continue"
            android:textSize="30sp"
            android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/welcomeScreenInstructions"
                android:layout_above="@id/welcomeScreenContinueButton"
                android:gravity="center_horizontal"
                android:text="Please note that the medical advice given by this application is not by health professionals and is meant for personal use only. If you press continue you agree with our terms and conditions." />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
